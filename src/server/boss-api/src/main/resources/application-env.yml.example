snowflake:
  machine:
    id: 0

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/zhenbanban-com?useSSL=false&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true
    username: root
    password:
    driver-class-name: com.mysql.cj.jdbc.Driver
  data:
    redis:
      host: localhost
      port: 6379
      password:
      database: 0
      lettuce:
        pool:
          enabled: true
          max-active: 8
          max-idle: 8
          min-idle: 0
          max-wait: -1ms
  devtools:
    restart:
      enabled: true
      poll-interval: 2s
      quiet-period: 1s
logging:
  level:
    root: WARN
    org.springframework: warn
    com.zaxxer.hikari: WARN
    org.apache.ibatis: DEBUG


mybatis:
  sql-print-to: /home/user/logs/zbb.sql
  mapper-locations: classpath*:mapper/*.xml,classpath*:com/zhenbanban/core/mapper/*.xml
  type-aliases-package: com.zhenbanban.core.infrastructure.persistence.po
  configuration:
    map-underscore-to-camel-case: true
    lazy-loading-enabled: true
    aggressive-lazy-loading: false

pagehelper:
  helper-dialect: mysql
  reasonable: true
  support-methods-arguments: true
  params: count=countSql
  async-count: true

jwt:
  secret: p0n5q1l4k5f5i1r7v3z5x3h0b3z6n1z9v8g8h5a8z5p8n1d2q8t5t3d7a4j8h7i7s8i2k3k5
  expire: 3600
  rememberExpire: 10080
  refreshExpire: 21600