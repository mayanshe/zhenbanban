<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhenbanban.core.infrastructure.persistence.mapper.AdminRolePoMapper">
    <!-- 事件(admins)表映射 -->

    <insert id="insert" parameterType="java.util.Map">
        <if test="roleIds != null and roleIds.size > 0">
            INSERT INTO admin_roles (admin_id, role_id, created_at) VALUES
            <foreach collection="roleIds" item="roleId" separator=",">
                (#{adminId}, #{roleId},  UNIX_TIMESTAMP(NOW(3)) * 1000)
            </foreach>
        </if>
    </insert>

    <select id="countSuperAdmin" resultType="Integer">
        SELECT COUNT(*) FROM admin_roles as ar
        LEFT JOIN roles as r ON ar.role_id = r.id
        WHERE r.role_name = 'administrator'
    </select>

    <delete id="deleteByAdminId" parameterType="Long">
        DELETE FROM admin_roles WHERE admin_id = #{adminId}
    </delete>

    <delete id="deleteByRoleId" parameterType="Long">
        DELETE FROM admin_roles WHERE role_id = #{roleId}
    </delete>

</mapper>