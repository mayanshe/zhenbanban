<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//dtd/Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhenbanban.core.infrastructure.persistence.mapper.RoleResourcePoMapper">
    <!-- 角色资源关联关系(role_permissions)表映射 -->

    <insert id="insert" parameterType="RoleResourcePo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role_resources (role_id, resource_id, created_at)
        VALUES (#{roleId}, #{resourceId}, #{createdAt})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO role_resources (role_id, resource_id, created_at)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.resourceId}, #{item.createdAt})
        </foreach>
    </insert>

    <delete id="batchDelete" parameterType="java.util.List">
        DELETE FROM role_resources
        WHERE 1=0
        <foreach collection="list" item="item">
            OR (role_id = #{item.roleId} AND resource_id = #{item.resourceId})
        </foreach>
    </delete>

    <delete id="deleteByRoleId" parameterType="Long">
        DELETE FROM role_resources WHERE role_id = #{roleId}
    </delete>

    <delete id="deleteByResourceId" parameterType="Long">
        DELETE FROM role_resources WHERE resource_id = #{resourceId}
    </delete>

    <select id="findResourceIdsByRoleId" parameterType="Long" resultType="Long">
        SELECT resource_id FROM role_resources WHERE role_id = #{roleId}
    </select>

</mapper>